<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <declare-styleable name="MaterialButton">
    
        <!-- Use when defining RippleDrawable through xml.
             If RippleDrawable is set as android:backgroud an invalid drawable tag ripple
             exception will be thrown on pre-lollipop devices. -->
        <attr name="background" />
        
        <!-- A drawable to use as the background.  This can be either a reference
             to a full drawable resource (such as a PNG image, 9-patch,
             XML state list description, etc), or a solid color such as "#ff000000"
            (black). -->
        <attr name="android:background" />
    
    </declare-styleable>

</resources>